<UserControl x:Class="MbFinalTest.ProductContol.ProductControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MbFinalTest.ProductContol"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="214.404" d:DesignWidth="529.501">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Picture_Image" Width="150" Height="150"></Image>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
            <Label Content="{Binding product.ProductName}"/>
            <Label/>
            <Label Content="{Binding product.Manufacture.Manufacture_name}"/>
            <Label/>
        </StackPanel>
        <Label Grid.Column="2"/>
    </Grid>
</UserControl>
